<p id="notice"><%= notice %></p>

<h1>Logs</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>ID</th>
      <th>Pcount</th>
      <th>Game</th>
      <th>Players</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.date %></td>
        <td><%= log.id %></td>
        <td><%= log.pcount %></td>
        <td><%= log.game.name %></td>
        <td>
          <ul>
            <% for player_score in log.player_scores %>
             <li><%= player_score.player.name %>: <%= player_score.score %></li>
            <% end %>
            </ul>
          </td>

        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

